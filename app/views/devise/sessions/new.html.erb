<style>
  body {
   
    background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://img.freepik.com/premium-vector/network-connection-background-abstract-style_23-2148875738.jpg);
    background-repeat: no-repeat; 
    background-position: center;
    background-attachment: fixed; 
    webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    height:100%;
    width:100%; 
    
  }
  input, select, textarea{
    color: blue;
  }
  .form-label {
  font-family: 'Times New Roman';
  font-weight: bold;
  color: black; 
  font-size: 16px; 
}
  </style>
  
  <div class="row align-items-center g-lg-5" >
  <div class="mx-auto col-lg-6">
  <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div id='forms' class='w-75 m-auto p-4 border border-dark border-1 rounded rounded-5 carousel mt-5 mb-5' data-bs-interval=0 style = "background-color : white"> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h4 class="display-4 fw-bold text-center" style = "color : black; font-family: 'Times New Roman',  Times, serif;">Login</h4>
    <div class="field">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "off"%>
    </div>

    <div class="field", style="margin-top: 10px;">
      <%= f.label :password, class: "form-label"  %><br />
      <%= f.password_field :password, autocomplete: "off"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field", style="margin-top: 10px;font-family: 'Times New Roman';">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions", style="margin-top: 10px;">
      <%= f.submit("Log in", class: "btn btn-primary rounded-3", style: "background-color: #f0f0f0; color: black; font-family: 'Times New Roman';")%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>

