<style>
  body {
   
    background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://img.freepik.com/premium-vector/network-connection-background-abstract-style_23-2148875738.jpg);
    background-repeat: no-repeat; 
    background-position: center;
    background-attachment: fixed; 
    webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    height:100%;
    width:100%; 
    
  }

  input, select, textarea{
    color: white;
  }
  .form-label {
  font-family: 'Times New Roman';
  font-weight: bold;
  color: black; 
  font-size: 16px; 
}
</style>
<body>
<div class="row align-items-center g-lg-5" >
  <div class="mx-auto col-lg-6">
  <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div id='forms' class='w-75 m-auto p-4 border border-dark border-1 rounded rounded-5 carousel mt-5 mb-5' data-bs-interval=0 style = "background-color : white">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h1 class="display-4 fw-bold text-center" style = "color : black;font-family: 'Times New Roman',  Times, serif;">Create an account</h1>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field", style="margin-top: 10px;">
          <%= f.label :name, class: "form-label"  %><br />
          <%= f.text_field :name, autofocus: true, style: "color: black;font-family: 'Times New Roman',  Times, serif;"  %>
        </div>

        <div class="field", style="margin-top: 10px;">
          <%= f.label :email, class: "form-label"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "off", style: "color: black;font-family: 'Times New Roman',  Times, serif;"  %>
        </div>

        <div class="field", style="margin-top: 10px;">
          <%= f.label :password, class: "form-label"  %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", style: "color: black;font-family: 'Times New Roman',  Times, serif;"  %>
        </div>

        <div class="field", style="margin-top: 10px;">
          <%= f.label :password_confirmation, class: "form-label"  %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , style: "color: black;font-family: 'Times New Roman',  Times, serif;" %>
        </div>

        <div class="actions", style="margin-top: 10px;" >
        <%= f.submit "Sign up", class: "btn btn-primary rounded-3", style: "background-color: #f0f0f0; color: black; font-family: 'Times New Roman';" %>
        </div>
      <% end %>

      <div class='row'>
        <div class='col'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>